<div id= "post_content">	
	<h2><%= @post.title %> </h2>
	<p> <%= @post.content %> </p>	
	<div class="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%= render @post.comments %>

		<h3>Reply</h3>
		<%= render "comments/form" %>
	</div>	
	<div class= "content_links">
		<%= link_to "Edit", edit_post_path(@post) %> 
		<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure to do this?"} %> 
		<%= link_to "Home", root_path %>
	</div>	 
</div>